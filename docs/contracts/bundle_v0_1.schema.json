{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mimo.local/contracts/bundle_v0_1.schema.json",
  "title": "MemoryBundle v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "bundle_id",
    "template",
    "scope",
    "source_mu_ids",
    "created_at",
    "evidence"
  ],
  "properties": {
    "bundle_id": { "type": "string" },
    "template": { "type": "string" },
    "scope": {
      "type": "object",
      "additionalProperties": true
    },
    "source_mu_ids": {
      "type": "array",
      "items": { "type": "string" }
    },
    "created_at": { "type": "string" },
    "expires_at": { "type": ["string", "null"] },
    "always_on": {},
    "session_on": {},
    "query_on": {},
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["mu_id"],
        "properties": {
          "mu_id": { "type": "string" },
          "pointer": { "type": "array", "items": { "type": "object" }, "default": [] },
          "snapshot": { "type": ["object", "null"], "default": null },
          "privacy": { "type": ["object", "null"], "default": null }
        }
      }
    },
    "export": { "type": "object" }
  }
}
