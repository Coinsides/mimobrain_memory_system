{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mimobrain.local/schemas/raw_manifest_line_v0_1.json",
  "title": "raw_manifest line v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["raw_id", "uri", "sha256", "size_bytes", "mime", "ingested_at"],
  "properties": {
    "raw_id": {"type": "string", "pattern": "^sha256:[0-9a-fA-F]{64}$"},
    "uri": {"type": "string"},
    "sha256": {"type": "string", "pattern": "^sha256:[0-9a-fA-F]{64}$"},
    "size_bytes": {"type": "integer", "minimum": 0},
    "mtime": {"type": ["string", "null"]},
    "mime": {"type": "string"},
    "ingested_at": {"type": "string"}
  }
}
